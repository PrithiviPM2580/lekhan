{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["vitest", "node"], // ✅ Vitest + Node globals available
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts",
    "vitest.config.ts"
  ], // ✅ Add tests + config
  "exclude": ["node_modules", "dist"] // ✅ Optional improvement
}
